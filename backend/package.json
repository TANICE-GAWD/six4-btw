{
  "name": "image-rating-backend",
  "version": "1.0.0",
  "description": "Backend API for image rating application",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "start:prod": "NODE_ENV=production node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "health-check": "node scripts/health-check.js",
    "validate-config": "node scripts/validate-config.js",
    "test:prod-config": "node scripts/test-production-config.js",
    "deploy:check": "node deploy.js",
    "deploy": "vercel --prod"
  },
  "keywords": ["image", "rating", "api", "express", "google-cloud-vision"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "@google-cloud/vision": "^4.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5"
  },
  "engines": {
  "node": "20.x"
  },

  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  }
}